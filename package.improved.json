{
  "name": "threatflow",
  "version": "1.0.0",
  "description": "Professional cybersecurity threat intelligence platform for attack flow analysis and visualization using MITRE ATT&CK framework",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "server": "tsx server.ts",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "build": "tsc && vite build",
    "lint": "eslint . --max-warnings 0 --cache --cache-location .eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .eslintcache",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "start": "tsx server.ts",
    "init-demo": "tsx scripts/init-demo-user.ts",
    "test": "echo \"Add your test framework here\"",
    "audit-security": "npm audit --audit-level high",
    "deps:update": "npm update && npm audit fix",
    "deps:outdated": "npm outdated",
    "clean": "rm -rf dist node_modules/.cache .eslintcache",
    "validate": "npm run type-check && npm run lint && npm run format:check"
  }
}